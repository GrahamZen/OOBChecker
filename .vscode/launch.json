{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run LLVM Pass",
            "type": "cppdbg",
            "request": "launch",
            "program": "/usr/bin/opt",
            "args": [
                "-load", "${workspaceFolder}/build/DivZeroPass.so",
                "-DivZero", "${input:testFileName}.ll",
                "-disable-output"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "lldb",
            "preLaunchTask": "compile-llvm"
        }
    ],
    "inputs": [
        {
            "id": "testFileName",
            "type": "command",
            "command": "extension.commandvariable.remember",
            "args": {
                "key": "testFileName",
                "value": "${input:pickTest}",
                // remove extension from file name
                "transform": {
                    "find": "\\.c$",
                    "replace": ""
                }
            }
        },
        {
            "id": "pickTest",
            "type": "command",
            "command": "extension.commandvariable.file.pickFile",
            "args": {
                "include": "test/*.c",
                "keyRemember": "testFileName",
                "prompt": "Pick a test file to run the pass on",
            }
        }
    ]
}
