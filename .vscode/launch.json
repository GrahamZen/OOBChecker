{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run LLVM Pass",
            "type": "cppdbg",
            "request": "launch",
            "program": "/usr/bin/opt",
            "args": [
                "-load", "${workspaceFolder}/build/DivZeroPass.so",
                "-DivZero", "${input:testFileName}.ll",
                "-disable-output"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "lldb",
            "preLaunchTask": "compile-llvm",
        }
    ],
    "inputs": [
        {
            "id": "testFileName",
            "type": "command",
            "command": "extension.commandvariable.transform",
            "args": {
                "text": "${pickFile:file}",
                "find": "\\.c$",
                "replace": "",
                "pickFile": {
                    "file": {
                        "include": "test/*.c",
                        "prompt": "Pick a test file to run the pass on",
                    }
                }
            }
        },
    ]
}
